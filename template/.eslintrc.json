{
	"extends": "google",
	"plugins": [
		"html"
	],
	"parser": "typescript-eslint-parser",
	"parserOptions": {
		"sourceType": "module"
	},
	"rules": {
        "comma-dangle": [
            "error",
            "never"
        ],
        "indent": [
            "error",
            4
        ],
        "no-invalid-this": [
            0
        ],
        "no-trailing-spaces": [
            "error",
            {
                "skipBlankLines": true
            }
        ],
        "no-empty-label": "off",
        "keyword-spacing": "error",
        "space-before-function-paren": [
            "error",
            "never"
        ],
        "no-mixed-spaces-and-tabs": "error",
        "arrow-body-style": [
            "error"
        ],
        "quotes": [
            "error",
            "double",
            {
                "allowTemplateLiterals": true
            }
        ],
        "require-jsdoc": "warn",
        "valid-jsdoc": "warn",
        "max-len": [
            "error",
            120,
            {
                "ignoreComments": true
            }
        ],
        "object-curly-spacing": [
            "error",
            "always"
        ]
	}
}
